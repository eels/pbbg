{
  "extends": "@pbbg/typescript-config/lib/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/http/*": ["../../node_modules/@pbbg/http/lib/*"],
      "@/web/*": ["./src/*"],
      "@/web-script/*": ["./scripts/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "../../node_modules/@pbbg/http/express-http.d.ts",
    ".contentlayer/generated",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next-string.d.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
