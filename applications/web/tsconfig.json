{
  "extends": "@pbbg/typescript-config/lib/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/web/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "next-express.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
