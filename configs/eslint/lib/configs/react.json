{
  "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended"],

  "plugins": ["react", "react-hooks"],

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "react/boolean-prop-naming": "error",
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "ignoreCase": false,
        "shorthandLast": true,
        "reservedFirst": true
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/self-closing-comp": "error"
  }
}
