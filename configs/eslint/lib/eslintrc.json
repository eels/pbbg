{
  "extends": [
    "eslint:recommended",
    "standard",
    "semistandard",
    "@pbbg/eslint-config/lib/configs/import.json",
    "@pbbg/eslint-config/lib/configs/jest.json",
    "@pbbg/eslint-config/lib/configs/prettier.json",
    "@pbbg/eslint-config/lib/configs/sort-destructure-keys.json",
    "@pbbg/eslint-config/lib/configs/sort-imports.json",
    "@pbbg/eslint-config/lib/configs/sort-keys.json",
    "@pbbg/eslint-config/lib/configs/typescript-sort-keys.json",
    "@pbbg/eslint-config/lib/configs/typescript.json"
  ],

  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },

  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "require-await": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
      }
    ]
  }
}
