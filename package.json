{
  "name": "@pbbg/root",
  "private": true,
  "version": "1.0.0",
  "author": "Liam Howell <liam@liam.codes>",
  "repository": "https://github.com/eels/pbbg",
  "bugs": "https://github.com/eels/pbbg/issues",
  "license": "GPL-3.0-or-later",
  "packageManager": "yarn@1.22.17",
  "workspaces": [
    "applications/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "db:build": "yarn workspace @pbbg/database-service build",
    "db:clean": "yarn workspace @pbbg/database-service reset",
    "db:create:migration": "yarn workspace @pbbg/database-service create:migration",
    "db:seed": "yarn workspace @pbbg/database-service seed",
    "dev": "turbo run dev",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:stop": "docker-compose stop",
    "docker:up": "docker-compose up --detach",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky install && turbo run prepare",
    "storybook:build": "yarn workspace @pbbg/web-client storybook:build",
    "storybook:start": "yarn workspace @pbbg/web-client storybook:start",
    "terraform:apply": "terraform -chdir=terraform apply -auto-approve",
    "terraform:destroy": "terraform -chdir=terraform destroy -auto-approve",
    "terraform:plan": "terraform -chdir=terraform plan",
    "terraform:validate": "terraform -chdir=terraform validate",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@pbbg/prettier-config": "*",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.1",
    "turbo": "^1.1.3",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  }
}
