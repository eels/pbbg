{
  "name": "@pbbg/root",
  "private": true,
  "version": "1.0.0",
  "author": "Liam Howell <liam@liam.codes>",
  "repository": "https://github.com/eels/pbbg",
  "bugs": "https://github.com/eels/pbbg/issues",
  "license": "GPL-3.0-or-later",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "applications/*",
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean:artifacts": "yarn rimraf \"**/tsconfig.tsbuildinfo\"",
    "clean:dependencies": "yarn rimraf \"**/node_modules/\"",
    "clean": "turbo run clean && yarn clean:artifacts",
    "dev:web": "turbo run dev --filter=@pbbg/api... --filter=@pbbg/web...",
    "dev": "turbo run dev",
    "format:fix": "yarn format:local:fix && turbo run format:fix",
    "format:local:fix": "yarn format:local --write",
    "format:local": "prettier \"{.,./{{.vscode,configs}/**/}}*.{js,json,ts}\" --cache --check",
    "format": "yarn format:local && turbo run format",
    "lint:fix": "yarn lint:local:fix && turbo run lint:fix",
    "lint:local:fix": "yarn lint:local --fix",
    "lint:local": "eslint \"./*.{js,json,ts}\" \"./{.vscode,configs}/**/*.{js,json,ts}\" --cache",
    "lint": "yarn format:local && turbo run lint",
    "prepare": "husky install && turbo run prepare",
    "test:dependencies": "yarn syncpack list-mismatches",
    "test": "turbo run test",
    "typescript:verify": "turbo run typescript:verify"
  },
  "dependencies": {
    "turbo": "1.10.14"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@pbbg/eslint-config": "*",
    "@pbbg/prettier-config": "*",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "parse5": "7.1.2",
    "rimraf": "5.0.1",
    "syncpack": "11.2.1"
  }
}
