{
  "name": "@pbbg/root",
  "private": true,
  "version": "1.0.0",
  "author": "Liam Howell <liam@liam.codes>",
  "repository": "https://github.com/eels/pbbg",
  "bugs": "https://github.com/eels/pbbg/issues",
  "license": "GPL-3.0-or-later",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "applications/*",
    "configs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "docker:up": "docker-compose up --detach",
    "export": "turbo run export",
    "format:fix": "yarn format:local --write && turbo run format:fix",
    "format:local": "prettier \"{.,./{{.vscode,configs}/**/}}*.{js,json}\" --cache --check",
    "format": "yarn format:local && turbo run format",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint",
    "prepare": "husky install && turbo run prepare",
    "storybook:build": "yarn workspace @pbbg/web-client storybook:build",
    "storybook:start": "yarn workspace @pbbg/web-client storybook:start",
    "test": "turbo run test",
    "typescript:verify": "turbo run typescript:verify"
  },
  "dependencies": {
    "turbo": "1.10.6"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@pbbg/prettier-config": "*",
    "husky": "8.0.3"
  }
}
