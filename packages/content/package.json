{
  "name": "@pbbg/content",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "contentlayer build >/dev/null 2>&1",
    "clean": "rimraf \"./.contentlayer\"",
    "create:post": "ts-node --project \"./tsconfig.script.json\" \"./scripts/create-post\"",
    "dev": "contentlayer dev",
    "format:fix": "yarn format --write",
    "format": "prettier \"{.,./src/**/}*.{cjs,js,json,ts}\" --check",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint \"./*.{cjs,js,json,ts}\" \"./src/**/*.{json,ts}\" --cache",
    "typescript:verify": "tsc --noEmit",
    "wait": "wait-on \"./.contentlayer\""
  },
  "dependencies": {
    "@pbbg/utilities": "*",
    "change-case": "4.1.2",
    "contentlayer": "0.3.1",
    "date-fns": "2.30.0",
    "inquirer": "8.2.0"
  },
  "devDependencies": {
    "@pbbg/eslint-config": "*",
    "@pbbg/prettier-config": "*",
    "@pbbg/typescript-config": "*",
    "@types/node": "20.3.2",
    "rimraf": "5.0.1",
    "wait-on": "7.0.1"
  }
}
