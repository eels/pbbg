{
  "name": "@pbbg/content",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "contentlayer build",
    "clean": "rimraf \"./.contentlayer\"",
    "create:post": "ts-node --files \"./scripts/create-post\" --transpileOnly",
    "dev": "contentlayer dev",
    "format:fix": "yarn format --write",
    "format": "prettier \"{.,./src/**/}*.{js,json,ts}\" --check",
    "lint:fix": "yarn lint:js --fix",
    "lint": "eslint \"./*.{js,json,ts}\" \"./src/**/*.{json,ts}\" --cache",
    "typescript:verify": "tsc --noEmit",
    "wait": "wait-on \"./.contentlayer\""
  },
  "files": [
    ".contentlayer/*"
  ],
  "dependencies": {
    "@pbbg/utilities": "*",
    "contentlayer": "0.3.1"
  },
  "devDependencies": {
    "@pbbg/eslint-config": "*",
    "@pbbg/prettier-config": "*",
    "@pbbg/typescript-config": "*",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.6",
    "tsconfig-paths": "4.2.0",
    "wait-on": "7.0.1"
  }
}
