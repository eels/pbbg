{
  "extends": "@pbbg/typescript-config/lib/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "jsx": "preserve",
    "outDir": "./lib",
    "paths": {
      "@/http/*": ["../../node_modules/@pbbg/http/lib/*"],
      "@/styles/*": ["../../../node_modules/@pbbg/styles/lib/*"],
      "@/ui-script/*": ["../scripts/*"],
      "@/ui/*": ["./*"],
      "@/utilities/*": ["../../../node_modules/@pbbg/utilities/lib/*"],
      "@/validators/*": ["../../../node_modules/@pbbg/validators/lib/*"]
    }
  },
  "exclude": ["lib"],
  "include": ["**/*.ts", "**/*.tsx", "pbbg-string.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
