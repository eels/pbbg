{
  "name": "@pbbg/utilities",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rimraf \"./lib\"",
    "dev": "onchange --initial \"./src/**/*.{js,json,ts}\" -- yarn build",
    "format:fix": "yarn format --write",
    "format": "prettier \"{.,./src/**/}*.{js,json,ts}\" --check",
    "lint:fix": "yarn lint:js --fix",
    "lint": "eslint \"./*.{js,json,ts}\" \"./src/**/*.{json,ts}\" --cache",
    "typescript:verify": "tsc --noEmit",
    "wait": "wait-on \"./lib\""
  },
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "@pbbg/eslint-config": "*",
    "@pbbg/prettier-config": "*",
    "@pbbg/typescript-config": "*",
    "onchange": "7.1.0",
    "rimraf": "3.0.2",
    "tsc-alias": "1.8.6",
    "wait-on": "7.0.1"
  }
}
